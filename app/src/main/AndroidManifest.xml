<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_company"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_company"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">
        <activity
            android:name=".AddNewUserActivity"
            android:exported="false"
            android:label="Add new user"
            android:theme="@style/Project"/>
        <activity
            android:name=".RequestTimeOffActivity"
            android:exported="false"
            android:label="Request time off"
            android:theme="@style/Project" />
        <activity
            android:name=".SecondActivity"
            android:exported="false"
            android:label="Home"
            android:theme="@style/Project" />
        <activity
            android:name=".FirstActivity"
            android:exported="true"
            android:label="Charm"
            android:theme="@style/Project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>